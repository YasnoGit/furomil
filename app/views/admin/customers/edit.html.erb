<div class="container">

  <!--会員情報編集フォーム-->
  <div class="p-3 mb-4 col-md-4 font-weight-bold bg-light text-dark">
    <%= image_tag 'form.png', size: '40x40' %>
    <%= @customer.last_name %>さんの会員情報編集</div>
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
  <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name, "会員ID" %></div>
        <div class="col-lg-3"><%= @customer.id %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name, "氏名" %></div>
        <div class="col-lg-3"><%= f.text_field :last_name, autofocus: true, class: "form-control border-dark" %></div>
        <div class="col-lg-3"><%= f.text_field :first_name, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name_kana, "フリガナ" %></div>
        <div class="col-lg-3"><%= f.text_field :last_name_kana, autofocus: true, class: "form-control border-dark" %></div>
        <div class="col-lg-3"><%= f.text_field :first_name_kana, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :post_code, "郵便番号" %></div>
        <div class="col-lg-3"><%= f.text_field :post_code, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :address, "住所" %></div>
        <div class="col-lg-6"><%= f.text_field :address, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :phone_number, "電話番号" %></div>
        <div class="col-lg-3"><%= f.text_field :phone_number, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-3"><%= f.email_field :email, autocomplete: "email", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :is_deleted, "会員ステータス" %></div>
        <div class="col-lg-3">
          <%= f.radio_button :is_deleted, false %><%= f.label :有効 %>
          <%= f.radio_button :is_deleted, true %><%= f.label :退会 %>
        </div>
      </div>
    </div>

    <!--編集保存ボタン-->
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= f.submit "変更を保存", class: 'btn btn-success', style: 'width:300px' %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
