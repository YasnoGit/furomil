<div class='container'>
  <div class='row'>

    <!--会員一覧表示-->
    <div class="p-3 mb-2 bg-light text-dark">
      <%= image_tag 'index.png', size: '40x40' %>会員一覧</div>
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + " " + customer.first_name,admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted == false %>
              <strong class="text-success">有効</strong>
            <% else %>
              <strong class="text-secondary">無効</strong>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
