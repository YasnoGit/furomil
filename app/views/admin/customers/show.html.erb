<div class="container">

    <!--会員詳細情報表示-->
    <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="p-3 mb-4 col-md-4 font-weight-bold bg-light text-dark">
      <%= image_tag 'facility.png', size: '40x40' %>
      <%= @customer.last_name+ " " + @customer.first_name %>さんの会員詳細</div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name, "会員ID" %></div>
        <div class="col-lg-3"><%= @customer.id %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name, "氏名" %></div>
        <div class="col-lg-3"><%= @customer.last_name+ " " + @customer.first_name %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :last_name_kana, "フリガナ" %></div>
        <div class="col-lg-3"><%= @customer.last_name_kana+ " " + @customer.first_name_kana %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :post_code, "郵便番号" %></div>
        <div class="col-lg-3"><%= @customer.post_code %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :address, "住所" %></div>
        <div class="col-lg-6"><%= @customer.address %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :phone_number, "電話番号" %></div>
        <div class="col-lg-3"><%= @customer.phone_number %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-3"><%= @customer.email %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "会員ステータス" %></div>
        <div class="col-lg-3">
         <% if @customer.is_deleted == false %>
           <strong class="text-success">有効</strong>
         <% else %>
           <strong class="text-secondary">無効</strong>
         <% end %>
        </div>
      </div>
    </div>

    <!--会員情報編集ボタン-->
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success', style: 'width:100px' %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
