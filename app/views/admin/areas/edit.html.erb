<!--エラー時フラッシュメッセージ-->
<% if @area.errors.any? %>
  エリア名を入力してください
<% end %>

<div class='container'>
  <div class='row'>
    <div class="col-xs-10 col-xs-offset-1">
      <div class="p-3 mb-2 col-mb-2 bg-light text-dark">
        <%= image_tag 'area.png', size: '40x40' %>
        エリア情報編集
      </div><br>

      <!--エリア編集フォーム-->
      <%= form_with model: @area, url:admin_area_path(@area) do |f| %>
        <div class="form-group col-md-10">
          <tr>
            <%= f.label :エリア名 %>
            <%= f.text_field :name, class: 'form-control area_name' %>
            <%= f.submit '変更を保存', class: 'btn btn-secondary' %>
          </tr>
        </div>
      <% end %>

    </div>
  </div>
</div>
