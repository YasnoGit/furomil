<p>
  <strong>
    <%= image_tag 'form.png', size: '80x80' %>
    レビューフォーム
  </strong>
</p>
  <%= form_with(model: [facility, review], local: false) do |f| %>
    <div class="form-group">
      <%= f.label :コメント %></br>
      <%= f.text_area :comment, placeholder: "コメントをここに", id: "comment_textarea" %>
    </div>
    <div class="form-group">
      <div id="rating-form">
        <%= f.label :score, '評価', class:'col-md-3 col-form-label' %></br>
        <%= f.hidden_field :score, id: :review_star %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "レビューを投稿する" %>
    </div>
  <% end %>

<!-- レビューフォーム用javascript -->
<script>
  var elem = document.getElementById('rating-form');
  var opt = {
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    scoreName: 'review[score]',
    half: false
  };
  raty(elem,opt);

</script>