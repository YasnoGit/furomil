<div class='container'>
  <div class='row'>

    <!--施設詳細情報表示-->
    <div class="col-4">
      <%= image_tag @facility.image, size: "200x200" %>
    </div>
    <div class="col-8">
      <div class="row">
  　　    <div class="col-12">
          <table class="table">
            <tbody>
              <tr>
                <td><strong><%= @facility.name %></strong></td>
              </tr>
              <tr>
                <td><%= render 'score_average' %></td>
              </tr>
              <tr>
                <td><%= @facility.introduction %></td>
              </tr>
              <tr>
                <td><%= @facility.area.name %></td>
              </tr>
              <tr>
                <td><%= @facility.price.floor.to_s(:delimited) %>円</td>
              </tr>
              <tr>
                <td><%= @facility.open %></td>
              </tr>
              <tr>
                <td><%= @facility.holiday %></td>
              </tr>
              <tr>
                <!--非同期通信対応ブックマークボタン-->
                <td id="bookmark_btn<%= @facility.id %>">
                  <%= render 'public/bookmarks/bookmark', facility: @facility %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!--以下レビューフォーム・一覧表示-->
    <div>
      <p>レビュー件数：<%= @facility.reviews.count %></p>
        <% @facility.reviews.each do |review| %>
          <%= review.customer.first_name %>
          <!--レビュースコア表示-->
          <%= review.score%>
          <div id="score-rate<%= review.id%>"></div>
    </div>

    <!-- レビューフォーム用javascript -->
    <script>
      var elem = document.getElementById('score-rate<%= review.id%>');
      var opt = {
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        score: <%= review.score %>,
        readOnly: true,
        half: false
      };
      raty(elem,opt);
    </script>

          <%= review.created_at.strftime('%Y/%m/%d') %><%= review.comment %>
          <% if review.customer == current_customer %>
            <%= link_to "削除", facility_review_path(review.facility, review), method: :delete %>
          <% end %>
        <% end %>

    <div>
      <%= form_with(model: [@facility, @review], local: true) do |f| %>
        <%= f.text_area :comment, placeholder: "コメントをここに" %>
        <div id="rating-form">
          <%= f.label :score,'評価 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :score, id: :review_star %>
        </div>
        <%= f.submit "レビューを投稿する" %>
      <% end %>
    </div>

  </div>
</div>

<!-- レビューフォーム用javascript -->
<script>
  var elem = document.getElementById('rating-form');
  var opt = {
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    scoreName: 'review[score]',
    half: false
  };
  raty(elem,opt);

</script>