<div class='container'>
  <div class='row'>

    <!--施設詳細情報表示-->
    <div class="col-4">
      <p class="mb-3"><%= image_tag @facility.image, size: "250x250" %></p>
      <!--Google Map Api 地図表示-->
      <p class="mb-3"><%= render 'admin/facilities/map', facility: @facility %></p>
      <!--レビューフォーム-->
      <p class="mt-5"><%= render 'public/reviews/form', facility: @facility, review: @review %></p>
    </div>
    <div class="col-8">
      <div class="row">
  　　    <div class="col-12">
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= image_tag 'facility.png', size: '80x80' %>
                  <strong>
                    施設名：<%= @facility.name %></strong>
                </td>
              </tr>
              <tr>
                <td><%= render 'score_average' %></td>
              </tr>
              <tr>
                <td><%= @facility.introduction %></td>
              </tr>
              <tr>
                <td><%= @facility.area.name %>エリア</td>
              </tr>
              <tr>
                <td><%= @facility.address %></td>
              </tr>
              <tr>
                <td><%= @facility.price.floor.to_s(:delimited) %>円</td>
              </tr>
              <tr>
                <td><%= @facility.open %></td>
              </tr>
              <tr>
                <td><%= @facility.holiday %></td>
              </tr>
              <tr>
                <!--非同期通信対応ブックマークボタン-->
                <td id="bookmark_btn<%= @facility.id %>">
                  <%= render 'public/bookmarks/bookmark', facility: @facility %>
                </td>
              </tr>
            </tbody>
          </table>
          <!--非同期通信対応レビュー-->
          <div id="review_index">
            <%= render 'public/reviews/index', facility: @facility %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>