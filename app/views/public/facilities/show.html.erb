<div class='container'>
  <div class='row'>

    <!--施設詳細情報表示-->
    <div class="col-4">
      <%= image_tag @facility.image, size: "200x200" %>
    </div>
    <div class="col-8">
      <div class="row">
  　　    <div class="col-12">
          <table class="table">
            <tbody>
              <tr>
                <td><strong><%= @facility.name %></strong></td>
              </tr>
              <tr>
                <td><%= render 'score_average' %></td>
              </tr>
              <tr>
                <td><%= @facility.introduction %></td>
              </tr>
              <tr>
                <td><%= @facility.area.name %></td>
              </tr>
              <tr>
                <td><%= @facility.price.floor.to_s(:delimited) %>円</td>
              </tr>
              <tr>
                <td><%= @facility.open %></td>
              </tr>
              <tr>
                <td><%= @facility.holiday %></td>
              </tr>
              <tr>
                <!--非同期通信対応ブックマークボタン-->
                <td id="bookmark_btn<%= @facility.id %>">
                  <%= render 'public/bookmarks/bookmark', facility: @facility %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!--レビュー一覧-->
    <div id="review_index">
      <%= render 'public/reviews/index', facility: @facility %>
    </div>
    
    <!--レビューフォーム-->
    <div>
      <%= render 'public/reviews/form', facility: @facility, review: @review %>
    </div>
  </div>
</div>